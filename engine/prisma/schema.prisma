generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model File {
  id       Int     @id @default(autoincrement())
  name     String
  isFolder Boolean
  parentId Int?
  parent   File?   @relation("SubFiles", fields: [parentId], references: [id])
  children File[]  @relation("SubFiles")
}
